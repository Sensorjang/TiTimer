<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stepper="http://schemas.android.com/apk/res-auto"
    xmlns:sshadkany="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dsgtimelayoutActivity">


    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="258dp"
        android:layout_gravity="center"
        android:background="@color/clear"
        android:orientation="vertical"
        stepper:layout_constraintStart_toStartOf="parent"
        stepper:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="横向拖动滑块并长按" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <com.bigkoo.snappingstepper.SnappingStepper
                android:id="@+id/stepper1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:text="小时" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <com.bigkoo.snappingstepper.SnappingStepper
                android:id="@+id/stepper2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:text="分钟" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <com.bigkoo.snappingstepper.SnappingStepper
                android:id="@+id/stepper3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:text=" 秒" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:orientation="vertical">

            <com.github.sshadkany.RectButton
                android:id="@+id/btn_ok"
                style="@style/Style.DayButton"
                android:layout_width="127dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                sshadkany:layout_constraintStart_toStartOf="parent"

                sshadkany:layout_constraintTop_toBottomOf="parent"
                sshadkany:shape_roundRect_borderWidth="1dp"

                sshadkany:shape_roundRect_bottomLeftRadius="100dp"
                sshadkany:shape_roundRect_bottomRightRadius="100dp"
                sshadkany:shape_roundRect_shadow_position_x="6dp"
                sshadkany:shape_roundRect_shadow_position_y="6dp"

                sshadkany:shape_roundRect_shadow_type="drop_shadow"
                sshadkany:shape_roundRect_topLeftRadius="100dp"
                sshadkany:shape_roundRect_topRightRadius="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/clear"
                    android:fontFamily="@font/aldrich"
                    android:text="OK"
                    android:textSize="11sp" />

            </com.github.sshadkany.RectButton>
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>